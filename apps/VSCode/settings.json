{
  // General
  "workbench.colorTheme": "Monokai Pro",
  "workbench.startupEditor": "newUntitledFile",
  "breadcrumbs.enabled": true,
  "emmet.triggerExpansionOnTab": true,
  "files.insertFinalNewline": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "security.workspace.trust.untrustedFiles": "open",

  // NeoVim
  "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "$HOME/.config/nvim/init.vim",

  // vscode-icons
  "workbench.iconTheme": "vscode-icons",
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "extensions": ["docker-compose.dev.yml", "docker-compose.dev.yaml"],
      "filename": true,
      "format": "svg"
    }
  ],

  // Editor
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "trailing",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.guides.bracketPairs": true,
  "editor.fontFamily": "Monaco, 'Courier New', monospace, 'Apple Color Emoji'",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.linkedEditing": true,

  // Terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "'MesloLGM Nerd Font', Monaco, 'Courier New', monospace, 'Apple Color Emoji'",
  "workbench.colorCustomizations": {
    "panel.background": "#121112",
    "terminal.background": "#121112",
    "terminal.foreground": "#C7C7C7",
    "terminalCursor.background": "#C7C7C7",
    "terminalCursor.foreground": "#C7C7C7",
    "terminal.ansiBlack": "#121112",
    "terminal.ansiBlue": "#6871FF",
    "terminal.ansiBrightBlack": "#776977",
    "terminal.ansiBrightBlue": "#6871FF",
    "terminal.ansiBrightCyan": "#00C5C7",
    "terminal.ansiBrightGreen": "#00C201",
    "terminal.ansiBrightMagenta": "#AF9AF8",
    "terminal.ansiBrightRed": "#FF6D67",
    "terminal.ansiBrightWhite": "#F7F3F7",
    "terminal.ansiBrightYellow": "#D7AF00",
    "terminal.ansiCyan": "#00C5C7",
    "terminal.ansiGreen": "#00C201",
    "terminal.ansiMagenta": "#AF9AF8",
    "terminal.ansiRed": "#FF6D67",
    "terminal.ansiWhite": "#C7C7C7",
    "terminal.ansiYellow": "#D7AF00"
  },

  // Explorer
  "explorer.openEditors.visible": 0,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Tailwindcss
  "stylelint.config": {
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen", "layer"]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "tailwindCSS.emmetCompletions": true,
  "editor.quickSuggestions": {
    "strings": true
  },

  // Docker
  "docker.enableDockerComposeLanguageService": true,

  // Terraform
  "terraform-ls.experimentalFeatures": {
    "validateOnSave": true
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true
  },

  // Prisma
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  // Styles
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "files.autoSave": "onFocusChange",

  // C#
  "omnisharp.useGlobalMono": "always",
  "omnisharp.monoPath": "/Library/Frameworks/Mono.framework/Versions/Current",
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },

  // Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.printWidth": 100,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,

  // ESlint
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "search.exclude": {
    "**/node_modules": true
  },

  // File associations
  "files.associations": {
    "install": "shellscript",
    ".lintstagedrc": "json",
    "*.strings": "plist",
    "*.plist": "plist",
    "vimrc": "viml",
    ".skhdrc": "shellscript",
    ".yabairc": "shellscript",
    ".tmux.conf": "shellscript",
    ".tool-versions": "properties",
    "config": "properties"
  },

  // yaml
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "redhat.telemetry.enabled": true,

  // Extenstions
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "liveServer.settings.donotShowInfoMsg": true,
  "gitlens.currentLine.enabled": false,
  "tabnine.experimentalAutoImports": true,
  "gitlens.advanced.messages": {
    "suppressImproperWorkspaceCasingWarning": true
  },
  "liveshare.presence": false,

  // Solidity
  "solidity.compileUsingRemoteVersion": "latest",
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity"
  },

  // Spell Checker
  "cSpell.userWords": [
    "Behaviour",
    "Dotfiles",
    "Karabiner",
    "Kotoeri",
    "Monokai",
    "NVRAM",
    "Neumorphism",
    "Nozomi's",
    "Numpad",
    "Powerpack",
    "Unpair",
    "chmod",
    "craco",
    "dotbot",
    "eieio",
    "firestore",
    "fullscreen",
    "iphone",
    "ishii",
    "macbook",
    "mkdir",
    "nozomi",
    "nozomiishii",
    "pbcopy",
    "reduxjs",
    "tailwindcss",
    "testid",
    "typesync",
    "wireframe"
  ]
}
