{
  // ----------------------------------------------------------------
  // General
  // ----------------------------------------------------------------
  "workbench.colorTheme": "Monokai Pro",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",
  "breadcrumbs.enabled": true,
  "files.insertFinalNewline": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "security.workspace.trust.untrustedFiles": "open",
  "search.exclude": {
    "**/node_modules": true
  },
  "window.restoreFullscreen": true,
  "window.newWindowDimensions": "maximized",
  "workbench.panel.opensMaximized": "always",

  // ----------------------------------------------------------------
  // Editor
  // ----------------------------------------------------------------
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.fontSize": 14,
  "editor.inlayHints.fontSize": 12, // Font size for type information hints
  "editor.inlayHints.enabled": "offUnlessPressed", // toggle type information hints with ctrl + option
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "trailing",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.fontFamily": "Monaco, 'Courier New', monospace, 'Apple Color Emoji'",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.linkedEditing": true,

  // ----------------------------------------------------------------
  // Explorer
  // ----------------------------------------------------------------
  "explorer.openEditors.visible": 0,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ----------------------------------------------------------------
  // Terminal
  // ----------------------------------------------------------------
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "'MesloLGS Nerd Font Mono', Monaco, 'Courier New', monospace, 'Apple Color Emoji'",
  "terminal.integrated.copyOnSelection": true,
  "workbench.colorCustomizations": {
    // Color theme for terminal
    "panel.background": "#121112",
    "terminal.foreground": "#bbbbbb",
    "terminal.background": "#121112",
    "terminal.ansiBlack": "#121112",
    "terminal.ansiBlue": "#0000bb",
    "terminal.ansiCyan": "#00bbbb",
    "terminal.ansiGreen": "#00bb00",
    "terminal.ansiMagenta": "#bb00bb",
    "terminal.ansiRed": "#bb0000",
    "terminal.ansiWhite": "#bbbbbb",
    "terminal.ansiYellow": "#bbbb00",
    "terminal.ansiBrightBlack": "#555555",
    "terminal.ansiBrightBlue": "#5555ff",
    "terminal.ansiBrightCyan": "#55ffff",
    "terminal.ansiBrightGreen": "#55ff55",
    "terminal.ansiBrightMagenta": "#ff55ff",
    "terminal.ansiBrightRed": "#ff5555",
    "terminal.ansiBrightWhite": "#ffffff",
    "terminal.ansiBrightYellow": "#ffff55",
    "terminal.selectionBackground": "#b5d5ff",
    "terminalCursor.foreground": "#bbbbbb",

    // Color theme for editorInlayHint
    "editorInlayHint.background": "#2D2A2E",
    "editorInlayHint.foreground": "#727072"
  },

  // ----------------------------------------------------------------
  // fig
  // ----------------------------------------------------------------
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },

  // ----------------------------------------------------------------
  // File associations
  // ----------------------------------------------------------------
  "files.associations": {
    "install": "shellscript",
    ".lintstagedrc": "json",
    "*.strings": "plist",
    "*.plist": "plist",
    "vimrc": "viml",
    ".skhdrc": "shellscript",
    ".yabairc": "shellscript",
    ".tmux.conf": "shellscript",
    ".tool-versions": "properties",
    ".ssh/config": "ssh-config",
    "*.ejs": "html",
    "*.ejs.t": "html",
    "LICENSE": "plaintext",
    ".env.sample": "dotenv"
  },

  // ----------------------------------------------------------------
  // Git
  // ----------------------------------------------------------------
  "git.enabled": true,
  "git.path": "/opt/homebrew/bin/git",

  // ----------------------------------------------------------------
  // Docker
  // ----------------------------------------------------------------
  "docker.enableDockerComposeLanguageService": true,
  "vs-kubernetes": {
    "vscode-kubernetes.minikube-path.mac": "/Users/nozomiishii/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
    "vscode-kubernetes.kubectl-path.mac": "/Users/nozomiishii/.vs-kubernetes/tools/kubectl/kubectl"
  },

  // ----------------------------------------------------------------
  // Terraform
  // ----------------------------------------------------------------
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true
  },
  "terraform.experimentalFeatures.validateOnSave": true,

  // ----------------------------------------------------------------
  // Prisma
  // ----------------------------------------------------------------
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  // ----------------------------------------------------------------
  // Shell
  // ----------------------------------------------------------------
  "[shellscript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.shellcheck": true
    }
  },
  "shellcheck.ignorePatterns": {
    "**/*.xonshrc": true,
    "**/*.xsh": true,
    "**/*.zsh": true,
    "**/*.zshrc": true,
    "**/zshrc": true,
    "**/*.zprofile": true,
    "**/zprofile": true,
    "**/*.zlogin": true,
    "**/zlogin": true,
    "**/*.zlogout": true,
    "**/zlogout": true,
    "**/*.zshenv": true,
    "**/zshenv": true,
    "**/*.zsh-theme": true,
    "**/.tmux.conf": true
  },

  // ----------------------------------------------------------------
  // Rust
  // ----------------------------------------------------------------
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.checkOnSave.command": "clippy",

  // ----------------------------------------------------------------
  // Prettier
  // ----------------------------------------------------------------
  "files.autoSave": "onFocusChange",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.printWidth": 100,

  // ----------------------------------------------------------------
  // ESlint
  // ----------------------------------------------------------------
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // ----------------------------------------------------------------
  // Lint
  // ----------------------------------------------------------------
  "editor.codeActionsOnSave": {
    "source.addMissingImports": true,
    "source.fixAll.eslint": true,
    "source.fixAll.markdownlint": true
  },

  // ----------------------------------------------------------------
  // sqlfluff
  // ----------------------------------------------------------------
  "[sql]": {
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  },
  "sqlfluff.dialect": "postgres",
  "sqlfluff.format.enabled": true,
  "sqlfluff.linter.run": "onSave",
  "sqlfluff.suppressNotifications": true,
  // ----------------------------------------------------------------
  // textlint
  // ----------------------------------------------------------------
  "textlint.languages": [
    "markdown",
    "mdx",
    "plaintext",
    "html",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "textlint.autoFixOnSave": true,
  "textlint.nodePath": "/Users/nozomiishii/dotfiles/configs/yarn/.config/yarn/global/node_modules",
  "textlint.configPath": "/Users/nozomiishii/dotfiles/.textlintrc.yaml",

  // ----------------------------------------------------------------
  // Markdown
  // ----------------------------------------------------------------
  "markdown-preview-github-styles.colorTheme": "dark",

  // ----------------------------------------------------------------
  // yaml
  // ----------------------------------------------------------------
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "redhat.telemetry.enabled": true,

  // ----------------------------------------------------------------
  // Extensions
  // ----------------------------------------------------------------
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "liveServer.settings.donotShowInfoMsg": true,
  "lldb.suppressUpdateNotifications": true,
  "gitlens.currentLine.enabled": false,
  "tabnine.experimentalAutoImports": true,
  "liveshare.presence": false,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)|todo!",

  // ----------------------------------------------------------------
  // Code runner
  // ----------------------------------------------------------------
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "rust": "cargo run"
  },

  // ----------------------------------------------------------------
  // Emmet
  // ----------------------------------------------------------------
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  // ----------------------------------------------------------------
  // vscode-icons
  // ----------------------------------------------------------------
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.associations.files": [
    {
      "icon": "nest-controller",
      "extensions": ["controller.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-gateway",
      "extensions": ["gateway.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-module",
      "extensions": ["module.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-service",
      "extensions": ["service.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-decorator",
      "extensions": ["decorator.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-guard",
      "extensions": ["guard.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-pipe",
      "extensions": ["pipe.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-filter",
      "extensions": ["filter.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-middleware",
      "extensions": ["middleware.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-resolver",
      "extensions": ["resolver.ts"],
      "format": "svg"
    },
    {
      "icon": "docker",
      "extensions": ["docker-compose.dev.yml"],
      "filename": true,
      "format": "svg"
    }
  ],

  // ----------------------------------------------------------------
  // cSpell
  // ----------------------------------------------------------------
  "cSpell.showAutocompleteSuggestions": true,
  "cSpell.dictionaries": [
    // built-in dictionaries (alphabetical ascending order)
    "bash",
    "companies",
    "css",
    "docker",
    "dotnet",
    "en_US",
    "en-gb",
    "filetypes",
    "fonts",
    "fullstack",
    "html",
    "html-symbol-entities",
    "networking-terms",
    "node",
    "npm",
    "public-licenses",
    "python",
    "rust",
    "softwareTerms",
    "typescript"
  ]
}
