{
  "$schema": "vscode://schemas/settings/user",

  // ----------------------------------------------------------------
  // Security
  // ----------------------------------------------------------------
  // open files from Warp
  "security.promptForLocalFileProtocolHandling": false,

  // ----------------------------------------------------------------
  // General
  // ----------------------------------------------------------------
  "workbench.colorTheme": "Monokai Pro",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",
  "breadcrumbs.enabled": true,
  "files.insertFinalNewline": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "security.workspace.trust.untrustedFiles": "open",
  "search.exclude": {
    "**/node_modules": true,
    "**/target": true,
    "**/submodules": true
  },
  "window.restoreFullscreen": true,
  "window.newWindowDimensions": "maximized",
  "editor.unicodeHighlight.allowedLocales": {
    "ja": true
  },
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": []
  },

  // ----------------------------------------------------------------
  // Editor
  // ----------------------------------------------------------------
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.fontSize": 14,
  "editor.inlayHints.fontSize": 12, // Font size for type information hints
  "editor.inlayHints.enabled": "offUnlessPressed", // toggle type information hints with ctrl + option
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "trailing",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.fontFamily": "Monaco, 'Hack Nerd Font', 'Apple Color Emoji'",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.linkedEditing": true,

  // ----------------------------------------------------------------
  // Explorer
  // ----------------------------------------------------------------
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ----------------------------------------------------------------
  // Terminal
  // ----------------------------------------------------------------
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": " Monaco, 'Hack Nerd Font', 'Apple Color Emoji'",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.title": "${cwdFolder}",
  "terminal.integrated.tabs.description": "${task}${separator}${local}${separator}${cwdFolder}",
  "terminal.external.osxExec": "Warp.app",
  "terminal.explorerKind": "external",

  // ----------------------------------------------------------------
  // Theme
  // ----------------------------------------------------------------
  "workbench.colorCustomizations": {
    // Terminal
    "panel.background": "#121112",
    "terminal.foreground": "#bbbbbb",
    "terminal.background": "#121112",
    "terminal.ansiBlack": "#121112",
    "terminal.ansiBlue": "#0000bb",
    "terminal.ansiCyan": "#00bbbb",
    "terminal.ansiGreen": "#00bb00",
    "terminal.ansiMagenta": "#bb00bb",
    "terminal.ansiRed": "#bb0000",
    "terminal.ansiWhite": "#bbbbbb",
    "terminal.ansiYellow": "#bbbb00",
    "terminal.ansiBrightBlack": "#555555",
    "terminal.ansiBrightBlue": "#5555ff",
    "terminal.ansiBrightCyan": "#55ffff",
    "terminal.ansiBrightGreen": "#55ff55",
    "terminal.ansiBrightMagenta": "#ff55ff",
    "terminal.ansiBrightRed": "#ff5555",
    "terminal.ansiBrightWhite": "#ffffff",
    "terminal.ansiBrightYellow": "#ffff55",
    "terminal.selectionBackground": "#0b1a2d",
    "terminalCursor.foreground": "#bbbbbb",

    // Editor InlayHint
    "editorInlayHint.background": "#2D2A2E",
    "editorInlayHint.foreground": "#727072",

    // Find and replace
    "editor.findMatchHighlightBorder": "#939293"
  },

  // ----------------------------------------------------------------
  // Debug
  // ----------------------------------------------------------------
  "debug.console.fontSize": 14,

  // ----------------------------------------------------------------
  // CodeWhisperer
  // ----------------------------------------------------------------
  "terminal.integrated.env.osx": {
    "CW_NEW_SESSION": "1"
  },

  // ----------------------------------------------------------------
  // File associations
  // ----------------------------------------------------------------
  "files.associations": {
    "*.ejs": "html",
    ".lintstagedrc": "json",
    "*.strings": "plist",
    "*.plist": "plist",
    "vimrc": "viml",
    ".skhdrc": "shellscript",
    ".yabairc": "shellscript",
    ".tmux.conf": "shellscript",
    ".actrc": "properties",
    ".actrc*": "properties",
    ".tool-versions": "properties",
    ".ssh/config": "ssh-config",
    "*.ejs*": "html",
    "CODEOWNERS": "ignore",
    "Brewfile*": "ruby",
    "**/Brewfiles/**": "ruby",
    ".env*": "dotenv",
    ".chezmoiroot": "properties",
    ".chezmoiversion": "properties",
    "dot_zprofile": "shellscript",
    "dot_zshrc": "shellscript",
    "dot_npmrc": "properties",
    "dot_gitconfig": "properties",
    "*.toml.tmpl": "toml"
  },

  // ----------------------------------------------------------------
  // Git
  // ----------------------------------------------------------------
  "git.enabled": true,
  "git.path": "/opt/homebrew/bin/git",

  // ----------------------------------------------------------------
  // Properties
  // ----------------------------------------------------------------
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  // ----------------------------------------------------------------
  // Docker
  // ----------------------------------------------------------------
  "docker.enableDockerComposeLanguageService": true,
  "vs-kubernetes": {
    "vscode-kubernetes.minikube-path.mac": "/Users/nozomiishii/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
    "vscode-kubernetes.kubectl-path.mac": "/Users/nozomiishii/.vs-kubernetes/tools/kubectl/kubectl"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },

  // ----------------------------------------------------------------
  // Terraform
  // ----------------------------------------------------------------
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true
  },
  "terraform.experimentalFeatures.validateOnSave": true,

  // ----------------------------------------------------------------
  // Prisma
  // ----------------------------------------------------------------
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "prisma.showPrismaDataPlatformNotification": false,

  // ----------------------------------------------------------------
  // Shell
  // ----------------------------------------------------------------
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.codeActionsOnSave": {
      "source.fixAll.shellcheck": "explicit"
    }
  },
  "[bats]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.codeActionsOnSave": {
      "source.fixAll.shellcheck": "explicit"
    }
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "shellformat.flag": "--indent 2 --binary-next-line --case-indent --space-redirects",
  "shellcheck.ignorePatterns": {
    "**/*.xonshrc": true,
    "**/*.xsh": true,
    "**/*.zsh": true,
    "**/*.zshrc": true,
    "**/zshrc": true,
    "**/*.zprofile": true,
    "**/zprofile": true,
    "**/*.zlogin": true,
    "**/zlogin": true,
    "**/*.zlogout": true,
    "**/zlogout": true,
    "**/*.zshenv": true,
    "**/zshenv": true,
    "**/*.zsh-theme": true,
    "**/.tmux.conf": true,
    "**/.envrc": true,
    "**/.hushlogin": true,

    // chezmoi
    "**/dot_zshrc": true,
    "**/dot_zprofile": true
  },

  // ----------------------------------------------------------------
  // Rust
  // ----------------------------------------------------------------
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.checkOnSave.command": "clippy",

  // ----------------------------------------------------------------
  // Toml
  // ----------------------------------------------------------------
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "evenBetterToml.schema.links": true,

  // ----------------------------------------------------------------
  // Python
  // ----------------------------------------------------------------
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "strict",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // "python.formatting.provider": "black",
  // "python.formatting.blackArgs": ["--line-length", "119"],
  // "python.linting.flake8Enabled": true,
  // "python.linting.enabled": true,
  // "python.linting.flake8Args": ["--max-line-length", "119"],

  // ----------------------------------------------------------------
  // Prettier
  // ----------------------------------------------------------------
  "files.autoSave": "onFocusChange",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,

  // ----------------------------------------------------------------
  // Stylelint | TailwindCSS
  // ----------------------------------------------------------------
  "stylelint.config": {
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen", "layer"]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // ----------------------------------------------------------------
  // PandaCSS
  // ----------------------------------------------------------------
  "panda.color-hints.color-preview.enabled": true,
  "panda.rem-to-px.enabled": true,
  "panda.inlay-hints.enabled": false,
  "panda.hovers.enabled": true,

  // ----------------------------------------------------------------
  // ESlint
  // ----------------------------------------------------------------
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // ----------------------------------------------------------------
  // editor.codeActionsOnSave
  // ----------------------------------------------------------------
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.markdownlint": "explicit"
  },

  // ----------------------------------------------------------------
  // sqlfluff
  // ----------------------------------------------------------------
  "[sql]": {
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  },
  "sqlfluff.dialect": "postgres",
  "sqlfluff.format.enabled": true,
  "sqlfluff.linter.run": "onSave",
  "sqlfluff.suppressNotifications": true,

  // ----------------------------------------------------------------
  // Markdown
  // ----------------------------------------------------------------
  "markdown-preview-github-styles.colorTheme": "dark",
  // ----------------------------------------------------------------
  // Ruby
  // ----------------------------------------------------------------
  "[ruby]": {
    "editor.defaultFormatter": "jnbt.vscode-rufo"
  },
  "rufo.exe": "/Users/nozomiishii/.rbenv/shims/rufo",

  // ----------------------------------------------------------------
  // yaml
  // ----------------------------------------------------------------
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "redhat.telemetry.enabled": true,

  // ----------------------------------------------------------------
  // Extensions
  // ----------------------------------------------------------------
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "liveServer.settings.donotShowInfoMsg": true,
  "lldb.suppressUpdateNotifications": true,
  "gitlens.currentLine.enabled": false,
  "liveshare.presence": false,
  "tabnine.experimentalAutoImports": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "todo-tree.general.showActivityBarBadge": false,

  // ----------------------------------------------------------------
  // scaffdog
  // ----------------------------------------------------------------
  "scaffdog.enable": false,

  // ----------------------------------------------------------------
  // dotenv
  // ----------------------------------------------------------------
  "dotenv.enableAutocloaking": false,

  // ----------------------------------------------------------------
  // i18n ally
  // ----------------------------------------------------------------
  "i18n-ally.autoDetection": false,

  // ----------------------------------------------------------------
  // Go
  // ----------------------------------------------------------------
  "go.toolsManagement.autoUpdate": true,

  // ----------------------------------------------------------------
  // Emmet
  // ----------------------------------------------------------------
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  // ----------------------------------------------------------------
  // Github pull requests
  // ----------------------------------------------------------------
  "githubPullRequests.terminalLinksHandler": "github",
  "githubPullRequests.pullBranch": "never",

  // ----------------------------------------------------------------
  // vscode-icons
  // ----------------------------------------------------------------
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.associations.files": [
    {
      "icon": "tsconfig",
      "extensions": ["tsconfig.nextjs.json"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "nest-controller",
      "extensions": ["controller.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-gateway",
      "extensions": ["gateway.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-module",
      "extensions": ["module.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-service",
      "extensions": ["service.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-decorator",
      "extensions": ["decorator.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-guard",
      "extensions": ["guard.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-pipe",
      "extensions": ["pipe.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-filter",
      "extensions": ["filter.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-middleware",
      "extensions": ["middleware.ts"],
      "format": "svg"
    },
    {
      "icon": "nest-resolver",
      "extensions": ["resolver.ts"],
      "format": "svg"
    },
    {
      "icon": "docker",
      "extensions": ["docker-compose.dev.yml"],
      "filename": true,
      "format": "svg"
    },

    // chezmoi
    {
      "icon": "git",
      "extensions": ["dot_gitconfig"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "npm",
      "extensions": ["dot_npmrc"],
      "filename": true,
      "format": "svg"
    }
  ],
  // ----------------------------------------------------------------
  // Jest
  // ----------------------------------------------------------------
  "jest.runMode": "on-demand",
  "jest.outputConfig": "test-results-based",

  // ----------------------------------------------------------------
  // vitest
  // ----------------------------------------------------------------
  "vitest.enable": true,
  "vitest.commandLine": "npx vitest --watch",
  "vitest.exclude": ["**/e2e/**", "**/node_modules/**", "**/dist/**", "**/.{idea,git,cache,output,temp}/**"],

  // ----------------------------------------------------------------
  // Playwright
  // ----------------------------------------------------------------
  "playwright.reuseBrowser": true,
  "playwright.showTrace": false,

  // ----------------------------------------------------------------
  // cSpell
  // ----------------------------------------------------------------
  "cSpell.showAutocompleteSuggestions": true,
  "cSpell.dictionaries": [
    // built-in dictionaries (alphabetical ascending order)
    "bash",
    "companies",
    "css",
    "docker",
    "dotnet",
    "en_US",
    "en-gb",
    "filetypes",
    "fonts",
    "fullstack",
    "html",
    "html-symbol-entities",
    "networking-terms",
    "node",
    "npm",
    "public-licenses",
    "python",
    "rust",
    "softwareTerms",
    "typescript"
  ],

  // ----------------------------------------------------------------
  // NX
  // ----------------------------------------------------------------
  "nxConsole.showNodeVersionOnStartup": false,

  // ----------------------------------------------------------------
  // Github Copilot
  // ----------------------------------------------------------------
  "github.copilot.editor.enableAutoCompletions": false,

  // ----------------------------------------------------------------
  // Total TypeScript
  // ----------------------------------------------------------------
  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": false,

  // ----------------------------------------------------------------
  // codeQL
  // ----------------------------------------------------------------
  "codeQL.telemetry.enableTelemetry": true,
  "[bats][shellscript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.shellcheck": "explicit"
    }
  }
  ///////////////////////////////////////////////////////////////////
}
