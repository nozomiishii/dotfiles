{
  "$schema": "vscode://schemas/settings/user",
  // ----------------------------------------------------------------
  // Essential
  // ----------------------------------------------------------------
  "workbench.colorTheme": "Monokai Pro",
  "workbench.iconTheme": "vscode-icons",
  "workbench.activityBar.orientation": "vertical",
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": false,

  // ----------------------------------------------------------------
  // dotfiles
  // ----------------------------------------------------------------
  "dotfiles.repository": "nozomiishii/dotfiles",
  "dotfiles.targetPath": "~/dotfiles",
  "dotfiles.installCommand": "install.sh",

  // ----------------------------------------------------------------
  // vscode project manager
  // ----------------------------------------------------------------
  "projectManager.projectsLocation": "~/dotfiles/home/Library/Application Support/Code/User",
  "projectManager.sortList": "Saved",

  // ----------------------------------------------------------------
  // dev container
  // ----------------------------------------------------------------
  // linux„Åß„ÅØÂãï„Åè„ÅåmacOS„Åß„ÅØÂãï„Åã„Å™„ÅÑ
  // "terminal.integrated.profiles.linux": {
  //   "zsh": { "path": "/usr/bin/zsh", "args": ["-l"] }
  // },
  // "terminal.integrated.defaultProfile.linux": "zsh",
  // "dev.containers.defaultFeatures": {},
  // "dev.containers.defaultExtensions": ["anthropic.claude-code"],

  // ----------------------------------------------------------------
  // General
  // ----------------------------------------------------------------
  "workbench.startupEditor": "newUntitledFile",
  "breadcrumbs.enabled": true,
  "files.insertFinalNewline": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "security.workspace.trust.untrustedFiles": "open",
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/target": true,
    "**/submodules": true
  },
  "window.restoreFullscreen": true,
  "window.newWindowDimensions": "maximized",
  "editor.unicodeHighlight.allowedLocales": {
    "ja": true
  },
  "git.autofetch": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",

  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,

  // ----------------------------------------------------------------
  // Editor
  // ----------------------------------------------------------------
  "editor.wordWrap": "on",
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "trailing",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.fontFamily": "Monaco, 'Apple Color Emoji'",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.linkedEditing": true,

  // ----------------------------------------------------------------
  // Explorer
  // ----------------------------------------------------------------
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ----------------------------------------------------------------
  // Terminal
  // ----------------------------------------------------------------
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": " Monaco, 'Apple Color Emoji'",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.title": "${cwdFolder}",
  "terminal.integrated.tabs.description": "${task}${separator}${local}${separator}${cwdFolder}",
  "terminal.external.osxExec": "ghostty",

  // ----------------------------------------------------------------
  // Theme
  // ----------------------------------------------------------------
  "workbench.colorCustomizations": {
    // Terminal

    // Theme: Gitlab-Dark
    //`/Applications/Ghostty.app/Contents/Resources/ghostty/themes/GitLab-Dark-Grey`
    "panel.background": "#28262b",

    "terminal.foreground": "#ffffff",
    "terminal.background": "#28262b",
    "terminal.selectionBackground": "#2d5484",
    "terminal.selectionForeground": "#28262b",
    "terminalCursor.foreground": "#ffffff",
    "terminalCursor.background": "#ffffff",

    "terminal.ansiBlack": "#000000",
    "terminal.ansiRed": "#f57f6c",
    "terminal.ansiGreen": "#52b87a",
    "terminal.ansiYellow": "#d99530",
    "terminal.ansiBlue": "#7fb6ed",
    "terminal.ansiMagenta": "#f88aaf",
    "terminal.ansiCyan": "#32c5d2",
    "terminal.ansiWhite": "#ffffff",
    "terminal.ansiBrightBlack": "#000000",
    "terminal.ansiBrightRed": "#f57f6c",
    "terminal.ansiBrightGreen": "#52b87a",
    "terminal.ansiBrightYellow": "#d99530",
    "terminal.ansiBrightBlue": "#7fb6ed",
    "terminal.ansiBrightMagenta": "#f88aaf",
    "terminal.ansiBrightCyan": "#32c5d2",
    "terminal.ansiBrightWhite": "#ffffff",

    // Editor InlayHint
    "editorInlayHint.background": "#2D2A2E",
    "editorInlayHint.foreground": "#727072",

    // Find and replace
    "editor.findMatchHighlightBorder": "#939293"
  },

  // ----------------------------------------------------------------
  // Amazon Q
  // ----------------------------------------------------------------
  "terminal.integrated.env.osx": {
    "Q_NEW_SESSION": "1"
  },

  // ----------------------------------------------------------------
  // Debug
  // ----------------------------------------------------------------
  "debug.console.fontSize": 14,

  // ----------------------------------------------------------------
  // File associations
  // ----------------------------------------------------------------
  "files.associations": {
    "*.ejs": "html",
    "*.plist": "xml",
    "vimrc": "viml",
    ".tmux.conf": "shellscript",
    ".actrc*": "properties",
    ".tool-versions": "properties",
    ".ssh/config": "ssh-config",
    "*.ejs*": "html",
    "CODEOWNERS": "ignore",
    "Brewfile*": "ruby",
    ".env*": "dotenv"
  },

  // ----------------------------------------------------------------
  // Git
  // ----------------------------------------------------------------
  "git.enabled": true,
  "git.path": "/opt/homebrew/bin/git",

  // ----------------------------------------------------------------
  // Properties
  // ----------------------------------------------------------------
  "[properties]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode"
  },

  // ----------------------------------------------------------------
  // Docker
  // ----------------------------------------------------------------
  "docker.enableDockerComposeLanguageService": true,
  "vs-kubernetes": {
    "vscode-kubernetes.minikube-path.mac": "/Users/nozomiishii/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
    "vscode-kubernetes.kubectl-path.mac": "/Users/nozomiishii/.vs-kubernetes/tools/kubectl/kubectl"
  },
  // "[dockerfile]": {
  //   "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode"
  // },

  // ----------------------------------------------------------------
  // Security - Dev container
  // ----------------------------------------------------------------
  "security.promptForRemoteFileProtocolHandling": false,

  // ----------------------------------------------------------------
  // Terraform
  // ----------------------------------------------------------------
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true
  },
  "terraform.experimentalFeatures.validateOnSave": true,

  // ----------------------------------------------------------------
  //„ÄÄHCL
  // ----------------------------------------------------------------
  // https://github.com/hashicorp/vscode-hcl/issues/98
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.hcl$",
        "cmd": "terragrunt hcl fmt --file ${file}",
        "autoShowOutputPanel": "error"
      }
    ]
  },

  // ----------------------------------------------------------------
  // Prisma
  // ----------------------------------------------------------------
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "prisma.showPrismaDataPlatformNotification": false,

  // ----------------------------------------------------------------
  // Shell
  // ----------------------------------------------------------------
  "[shellscript]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.shellcheck": "explicit"
    }
  },
  "[bats]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.shellcheck": "explicit"
    }
  },
  "[ignore]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "dotenv.dotenv-vscode"
  },
  "shellcheck.ignorePatterns": {
    "**/*.xonshrc": true,
    "**/*.xsh": true,
    "**/*.zsh": true,
    "**/*.zshrc": true,
    "**/zshrc": true,
    "**/*.zprofile": true,
    "**/zprofile": true,
    "**/*.zlogin": true,
    "**/zlogin": true,
    "**/*.zlogout": true,
    "**/zlogout": true,
    "**/*.zshenv": true,
    "**/zshenv": true,
    "**/*.zsh-theme": true,
    "**/.tmux.conf": true,
    "**/.envrc": true,
    "**/.hushlogin": true
  },

  // ----------------------------------------------------------------
  // Rust
  // ----------------------------------------------------------------
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.checkOnSave.command": "clippy",

  // ----------------------------------------------------------------
  // Toml
  // ----------------------------------------------------------------
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "evenBetterToml.schema.links": true,

  // ----------------------------------------------------------------
  // Python
  // ----------------------------------------------------------------
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "strict",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // "python.formatting.provider": "black",
  // "python.formatting.blackArgs": ["--line-length", "119"],
  // "python.linting.flake8Enabled": true,
  // "python.linting.enabled": true,
  // "python.linting.flake8Args": ["--max-line-length", "119"],

  // ----------------------------------------------------------------
  // Stylelint | TailwindCSS
  // ----------------------------------------------------------------
  "stylelint.config": {
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen", "layer"]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "tailwindCSS.experimental.classRegex": [["tv\\(([^)]*)\\)", "{?\\s?[\\w].*:\\s*?[\"'`]([^\"'`]*).*?,?\\s?}?"]],

  // ----------------------------------------------------------------
  // typescript
  // ----------------------------------------------------------------
  "[typescript]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferGoToSourceDefinition": true,

  // ----------------------------------------------------------------
  // javascript
  // ----------------------------------------------------------------
  "[javascript]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.preferGoToSourceDefinition": true,

  // ----------------------------------------------------------------
  // json
  // ----------------------------------------------------------------
  "[json]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "prettier.prettier-vscode"
  },

  // ----------------------------------------------------------------
  // ESlint
  // ----------------------------------------------------------------
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // ----------------------------------------------------------------
  // Prettier
  // ----------------------------------------------------------------
  "prettier.requireConfig": true,

  // ----------------------------------------------------------------
  // editor.codeActionsOnSave
  // ----------------------------------------------------------------
  "editor.codeActionsOnSave": {
    // "source.addMissingImports": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.markdownlint": "explicit"
  },

  // ----------------------------------------------------------------
  // sqlfluff
  // ----------------------------------------------------------------
  "[sql]": {
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  },
  "sqlfluff.dialect": "postgres",
  "sqlfluff.format.enabled": true,
  "sqlfluff.linter.run": "onSave",
  "sqlfluff.suppressNotifications": true,

  // ----------------------------------------------------------------
  // Markdown
  // ----------------------------------------------------------------
  "markdown-preview-github-styles.colorTheme": "dark",
  "markdownShortcuts.bullets.marker": "-",
  "markdownShortcuts.icons.italic": false,
  "markdownShortcuts.icons.bullets": false,
  "markdownShortcuts.icons.bold": false,

  // ----------------------------------------------------------------
  // Remark
  // ----------------------------------------------------------------
  "remark.requireConfig": true,

  // ----------------------------------------------------------------
  // Obsidian
  // ----------------------------------------------------------------
  // Obsidian„Åã„ÇâÁõ¥Êé•VScode„ÇíÈñã„Åè„ÅÆ„ÇíË®±ÂèØ„Åô„Çã
  "security.promptForLocalFileProtocolHandling": false,

  // ----------------------------------------------------------------
  // Ruby
  // ----------------------------------------------------------------
  "[ruby]": {
    "editor.defaultFormatter": "jnbt.vscode-rufo"
  },
  "rufo.exe": "/Users/nozomiishii/.rbenv/shims/rufo",

  // ----------------------------------------------------------------
  // yaml
  // ----------------------------------------------------------------
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "redhat.telemetry.enabled": true,

  // ----------------------------------------------------------------
  // Extensions
  // ----------------------------------------------------------------
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "liveServer.settings.donotShowInfoMsg": true,
  "lldb.suppressUpdateNotifications": true,
  "gitlens.currentLine.enabled": false,
  "liveshare.presence": false,
  "tabnine.experimentalAutoImports": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],

  // ----------------------------------------------------------------
  // Github Pull Requests
  // ----------------------------------------------------------------
  "githubPullRequests.notifications": "pullRequests",
  "githubPullRequests.commentExpandState": "collapseAll",

  // ----------------------------------------------------------------
  // scaffdog
  // ----------------------------------------------------------------
  "scaffdog.enable": false,

  // ----------------------------------------------------------------
  // dotenv
  // ----------------------------------------------------------------
  "dotenv.enableAutocloaking": false,

  // ----------------------------------------------------------------
  // makefile
  // ----------------------------------------------------------------
  "makefile.configureOnOpen": false,

  // ----------------------------------------------------------------
  // i18n-ally
  // ----------------------------------------------------------------
  "i18n-ally.autoDetection": false,
  "i18n-ally.annotations": false,
  "i18n-ally.translate.openai.apiModel": "gpt-4",

  // ----------------------------------------------------------------
  // GitLens
  // ----------------------------------------------------------------
  "gitlens.views.scm.grouped.views": {
    "stashes": false
  },
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,

  // ----------------------------------------------------------------
  // Go
  // ----------------------------------------------------------------
  "go.toolsManagement.autoUpdate": true,

  // ----------------------------------------------------------------
  // Emmet
  // ----------------------------------------------------------------
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  // ----------------------------------------------------------------
  // Github pull requests
  // ----------------------------------------------------------------
  "githubPullRequests.terminalLinksHandler": "github",
  "githubPullRequests.pullBranch": "never",

  // ----------------------------------------------------------------
  // vscode-icons
  // ----------------------------------------------------------------
  "vsicons.dontShowNewVersionMessage": true,

  // ----------------------------------------------------------------
  // vitest
  // ----------------------------------------------------------------
  "vitest.enable": true,
  "vitest.commandLine": "npx vitest --watch",
  "vitest.exclude": ["**/e2e/**", "**/node_modules/**", "**/dist/**", "**/.{idea,git,cache,output,temp}/**"],

  // ----------------------------------------------------------------
  // Playwright
  // ----------------------------------------------------------------
  "playwright.reuseBrowser": true,
  "playwright.showTrace": false,
  "playwright.pickLocatorCopyToClipboard": true,

  // ----------------------------------------------------------------
  // cSpell
  // ----------------------------------------------------------------
  "cSpell.showAutocompleteSuggestions": true,
  "cSpell.dictionaries": [
    // built-in dictionaries (alphabetical ascending order)
    "bash",
    "companies",
    "css",
    "docker",
    "dotnet",
    "en_US",
    "en-gb",
    "filetypes",
    "fonts",
    "fullstack",
    "html",
    "html-symbol-entities",
    "networking-terms",
    "node",
    "npm",
    "public-licenses",
    "python",
    "rust",
    "softwareTerms",
    "typescript"
  ],
  "cSpell.userWords": ["nozomiishii"],

  // ----------------------------------------------------------------
  // Github Copilot
  // ----------------------------------------------------------------
  // "github.copilot.editor.enableAutoCompletions": false,
  // "github.copilot.chat.editor.temporalContext.enabled": true,
  // "github.copilot.nextEditSuggestions.enabled": true,
  // "github.copilot.chat.edits.enabled": true,
  // "github.copilot.chat.codeGeneration.instructions": [
  //   {
  //     "text": "ÁßÅ„ÅåÊó•Êú¨Ë™û„ÅßË≥™Âïè„ÇíÈÄÅ‰ø°„Åó„ÅüÂ†¥Âêà„ÄÅ„Åù„ÅÆË≥™Âïè„ÇíËá™ÁÑ∂„Å™Âè£Ë™û„ÅÆËã±Ë™û„Å´ÁøªË®≥„Åó„ÄÅ„ÉÄ„Éñ„É´„ÇØ„Ç™„Éº„ÉÜ„Éº„Ç∑„Éß„É≥„ÅßÂõ≤„Å£„Å¶ÊñáÈ†≠„Å´„Çø„Ç§„Éà„É´„Å®„Åó„Å¶Ë°®Á§∫„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ"
  //   },
  //   {
  //     "text": "Ë≥™Âïè„Å∏„ÅÆÂõûÁ≠î„ÅØ„ÄÅËá™ÁÑ∂„Å™Âè£Ë™û„ÅÆËã±Ë™û„ÅßË°å„Å£„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇÂõûÁ≠î„ÅÆÂæå„Å´„ÄÅ„Åù„ÅÆÂõûÁ≠î„ÅÆÊó•Êú¨Ë™ûË®≥„ÇíËøΩÂä†„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ"
  //   }
  // ],
  // ----------------------------------------------------------------
  // codeQL
  // ----------------------------------------------------------------
  "codeQL.telemetry.enableTelemetry": true,

  // ----------------------------------------------------------------
  // Action Buttons
  // ----------------------------------------------------------------
  "actionButtons": {
    "defaultColor": "#727072",
    "commands": [
      {
        "name": "$(pencil) obsidian",
        "command": "open \"obsidian://adv-uri?vault=brain&filepath=$(echo '${file}' | sed 's|.*/brain/||')\""
      }
    ]
  },

  // ----------------------------------------------------------------
  // command-runner
  // ----------------------------------------------------------------
  "command-runner.commands": {
    "üìÉ Open in Obsidian": "open \"obsidian://adv-uri?vault=brain&filepath=$(echo '${file}' | sed 's|.*/brain/||')\"",
    "üé≠ Open Trace viewer": "pnpx playwright show-trace ${selectedFile}"
  },

  // ----------------------------------------------------------------
  // „Å™„Çì„Åã„Åì„ÇåÊ∂à„Åó„Å¶„ÇÇÊ∂à„Åó„Å¶„ÇÇÂãùÊâã„Å´Âá∫„Å¶„Åè„Çã
  // ----------------------------------------------------------------
  "editor.tokenColorCustomizations": {
    "textMateRules": []
  },

  // ----------------------------------------------------------------
  // Cursor
  // ----------------------------------------------------------------
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.composer.usageSummaryDisplay": "always"

  ///////////////////////////////////////////////////////////////////
}
