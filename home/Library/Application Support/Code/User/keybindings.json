[
  // ----------------------------------------------------------------
  // Editor split
  // ----------------------------------------------------------------
  {
    "key": "shift+cmd+\\",
    "command": "workbench.action.splitEditorDown",
    "when": "textInputFocus"
  },

  // ----------------------------------------------------------------
  // Navigation
  // ----------------------------------------------------------------
  {
    "key": "ctrl+[",
    "command": "workbench.action.navigateBack"
  },
  {
    "key": "ctrl+]",
    "command": "workbench.action.navigateForward"
  },

  // ----------------------------------------------------------------
  // Markdown
  // ----------------------------------------------------------------
  {
    "key": "alt+cmd+1",
    "command": "md-shortcut.toggleTitleH1",
    "when": "editorTextFocus && editorLangId == 'markdown'"
  },
  {
    "key": "alt+cmd+2",
    "command": "md-shortcut.toggleTitleH2",
    "when": "editorTextFocus && editorLangId == 'markdown'"
  },
  {
    "key": "alt+cmd+3",
    "command": "md-shortcut.toggleTitleH3",
    "when": "editorTextFocus && editorLangId == 'markdown'"
  },
  {
    "key": "alt+cmd+4",
    "command": "md-shortcut.toggleCheckboxes",
    "when": "editorTextFocus && editorLangId == 'markdown'"
  },
  {
    "key": "alt+cmd+5",
    "command": "md-shortcut.toggleBullets",
    "when": "editorTextFocus && editorLangId == 'markdown'"
  },
  {
    "key": "alt+cmd+6",
    "command": "md-shortcut.toggleNumbers",
    "when": "editorTextFocus && editorLangId == 'markdown'"
  },
  {
    "key": "alt+cmd+8",
    "command": "md-shortcut.toggleCodeBlock",
    "when": "editorTextFocus && editorLangId == 'markdown'"
  },

  // ----------------------------------------------------------------
  // Window Groupまるごと閉じる
  // ----------------------------------------------------------------
  {
    "key": "alt+cmd+w",
    "command": "workbench.action.closeEditorsInGroup"
  },

  // ----------------------------------------------------------------
  // Reload Window
  // ----------------------------------------------------------------
  {
    "key": "shift+cmd+r",
    "command": "workbench.action.reloadWindow"
  },

  // ----------------------------------------------------------------
  // Create a new file
  // ----------------------------------------------------------------
  // focusが当たってる場所で新規ファイル作成に変更
  {
    "key": "cmd+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "cmd+n",
    "command": "explorer.newFile"
  },

  // ----------------------------------------------------------------
  // Terminal
  // ----------------------------------------------------------------
  // Terminal起動してなかったら新しく起動する
  {
    "key": "alt+cmd+j",
    "command": "workbench.action.terminal.new",
    "when": "!terminal.active"
  },

  // Terminal表示
  {
    "key": "alt+cmd+j",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },

  // Terminal最大化
  {
    "key": "alt+j",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "terminal.active"
  },

  // Terminalアプリで開き直す
  {
    "key": "shift+cmd+j",
    "command": "workbench.action.terminal.openNativeConsole"
  },

  // Terminalの新規タブ作成
  {
    "key": "cmd+t",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
  },

  // Terminalのタブを閉じる
  {
    "key": "cmd+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
  },

  // ----------------------------------------------------------------
  // Zellij
  // ----------------------------------------------------------------
  // Zellijを閉じるhotkeyとconflict
  {
    "key": "ctrl+q",
    "command": "-workbench.action.quickOpenView"
  },

  // ----------------------------------------------------------------
  // console.log
  // ----------------------------------------------------------------
  {
    "key": "ctrl+c",
    "command": "editor.action.insertSnippet",
    "args": { "name": "pretty console log" },
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+c",
    "command": "editor.action.insertSnippet",
    "args": { "name": "pretty console check" },
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
  },

  // ----------------------------------------------------------------
  // i18n
  // ----------------------------------------------------------------
  {
    "key": "ctrl+cmd+t",
    "command": "editor.action.insertSnippet",
    "when": "editorTextFocus && editorHasSelection",
    "args": {
      "snippet": "{t('${TM_SELECTED_TEXT}')}"
    }
  }
]
