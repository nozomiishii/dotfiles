# ----------------------------------------------------------------
# Brew
# ----------------------------------------------------------------

# Official Go implementation of the Ethereum protocol https://geth.ethereum.org/
brew "ethereum"

# Simple, fast and user-friendly alternative to find https://github.com/sharkdp/fd
brew "fd"

# Play, record, convert, and stream audio and video https://ffmpeg.org/
brew "ffmpeg"

# Command-line tools for fly.io services https://fly.io
brew "flyctl"

# Command-line fuzzy finder written in Go https://github.com/junegunn/fzf
brew "fzf"

# Command-line JSON processing tool https://github.com/antonmedv/fx
brew "fx"

# Like cURL, but for gRPC https://github.com/fullstorydev/grpcurl
brew "grpcurl"

# Kubernetes package manager https://helm.sh/
brew "helm"

# Run a Kubernetes cluster locally https://minikube.sigs.k8s.io/
brew "minikube"

# Generate clients, server & docs from an OpenAPI spec https://openapi-generator.tech/
brew "openapi-generator"

# Build, test, and manage your Stripe integration https://stripe.com/docs/stripe-cli
tap "stripe/stripe-cli"
brew "stripe"

# Text interface for Git repositories https://jonas.github.io/tig/
brew "tig"

# Display directories as trees http://mama.indstate.edu/users/ice/tree/
brew "tree"

# Executes a program periodically, showing output fullscreen https://gitlab.com/procps-ng/procps
brew "watch"

