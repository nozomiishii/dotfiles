Host *
  # Only for MacOS https://superuser.com/questions/1127067/macos-keeps-asking-my-ssh-passphrase-since-i-updated-to-sierra
  UseKeychain yes

Host github.com
  HostName github.com
  AddKeysToAgent yes
  User git
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/id_rsa

# Fig ssh integration. Keep at the bottom of this file.
Match all
  Include ~/.fig/ssh
