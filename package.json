{
  "name": "dotfiles",
  "version": "1.0.0",
  "description": "Doting Dotfiles",
  "homepage": "https://github.com/nozomiishii/dotfiles#readme",
  "bugs": {
    "url": "https://github.com/nozomiishii/dotfiles/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nozomiishii/dotfiles.git"
  },
  "license": "MIT",
  "author": "Nozomi Ishii",
  "main": "install.sh",
  "scripts": {
    "commit": "cz",
    "format": "yarn prettier --check",
    "format:fix": "yarn prettier --write",
    "install:all": "./install.sh",
    "install:apps": "./install.sh --apps",
    "install:brew": "./install.sh --homebrew",
    "install:brew:full": "./install.sh --homebrew-full",
    "install:code": "./install.sh --code",
    "install:drive": "./install.sh --drive",
    "install:environment": "./install.sh --environment",
    "install:help": "./install.sh --help",
    "install:link": "./install.sh --symlink",
    "install:macos": "./install.sh --macos",
    "install:reinstall": "./install.sh --reinstall",
    "install:sshkey": "./install.sh --sshkey",
    "lint": "yarn lint:markdownlint",
    "lint:fix": "yarn lint:markdownlint:fix",
    "lint:markdownlint": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "lint:markdownlint:fix": "markdownlint-cli2-fix '**/*.md' '#node_modules'",
    "prettier": "prettier . '!**/*.md' '!apps' '!**/p10k.zsh' '!**/zinit.zsh' --ignore-unknown --ignore-path .gitignore",
    "setup": "lefthook install"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@commitlint/cz-commitlint": "17.5.0",
    "@evilmartians/lefthook": "1.3.9",
    "@nozomiishii/markdownlint-cli2-config": "0.0.1",
    "@nozomiishii/prettier-config": "0.1.14",
    "@prettier/plugin-ruby": "3.2.2",
    "commitizen": "4.3.0",
    "markdownlint-cli2": "0.6.0"
  },
  "packageManager": "yarn@1.22.19",
  "volta": {
    "node": "18.15.0"
  }
}
